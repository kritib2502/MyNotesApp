<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>My Notes</title>
</head>
<body>
    <h1>My Notes App</h1>

    <form action="createNote" class="form" method="post">
        <input type="text" name="title" placeholder="Title">
        <textarea type="text" name="content" cols="40" rows="6" placeholder="Content"></textarea>
        <button type="submit">Create a Note</button>
    </form>

    <ul>
        <% notes.forEach(note => { %>
            <li>
                <h2><%= note.title %></h2>
                <p><%= note.contents.substring(0, 100) %>...</p>
                <p><%= new Date(note.created) %></p>
                <a href="/<%= note.id %>">View More</a>
                <form action="/deleteNote" method="post">
                    <input type="hidden" name="id" value="<%= note.id %>">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %> 
        </ul>
</body>
</html>